# FLUX.1 Krea â€” Environment Configuration
# Copy this file to .env and fill in your values.

# Hugging Face token (required)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# MPS (Metal Performance Shaders) tuning for Apple Silicon
PYTORCH_MPS_HIGH_WATERMARK_RATIO=0.8
PYTORCH_MPS_LOW_WATERMARK_RATIO=0.6
PYTORCH_MPS_PREFER_FAST_ALLOC=1
PYTORCH_MPS_ALLOCATOR_POLICY=expandable_segments
PYTORCH_ENABLE_MPS_FALLBACK=1
PYTORCH_MPS_MEMORY_FRACTION=0.85

# Thread configuration (M4 Pro: 8 performance cores)
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8

# Optional overrides (uncomment to use)
# FLUX_OPTIMIZATION_LEVEL=standard
# FLUX_GENERATION_WIDTH=1024
# FLUX_GENERATION_HEIGHT=1024
# FLUX_GENERATION_STEPS=28
